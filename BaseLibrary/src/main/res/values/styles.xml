<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
         <!--Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- 多状态视图样式-->

    <!-- 加载弹框样式 -->
    <style name="LightDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan
        </item>
    </style>
    <style name="LightProgressDialog" parent="@style/LightDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 通用列表样式-->

    <!-- 搜索输入框样式-->
    <!-- 带搜索的Header样式 -->
    <!-- TabLayout文字样式-->
    <!-- TabLayout通用样式-->
    <!-- 订单中Tab样式-->
    <!-- 横向分隔线 -->
    <!-- 竖向分隔线 -->
    <!-- 竖向分隔线 带上下间距 -->
    <!-- 底部出入动画 -->
    <!-- 自定义标签字体样式 -->
    <style name="LabelTitleTextStyle">
        <item name="android:textSize">@dimen/text_middle_size</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 自定义标签内容字体样式 -->
    <style name="LabelContentTextStyle" parent="@style/LabelTitleTextStyle">
        <item name="android:textColor">@color/text_light_dark</item>
    </style>
    <!-- 横屏按钮样式，带不可用状态 -->
    <!-- 按钮样式-->

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--通用text-->
    <style name="common_item_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!--详情页右侧item-->
    <style name="common_item_text_details_right" parent="common_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_20dp</item>
        <item name="android:textColor">@color/dealer_common_text_black</item>
        <item name="android:gravity">left|center</item>
    </style>

    <!--通用横线-->
    <style name="common_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_02dp</item>
        <item name="android:layout_marginLeft">@dimen/_20dp</item>
        <item name="android:layout_marginRight">@dimen/_20dp</item>

        <item name="android:background">#CED7DC</item>
    </style>

    <!--通用横线-距离右侧的间距-->
    <style name="common_line_marignright" parent="common_line">
        <item name="android:layout_marginRight">@dimen/_20dp</item>
    </style>


    <!--通用横线-距离左侧和右侧的间距-->
    <style name="common_line_marignleftandright" parent="common_line">
        <item name="android:layout_marginLeft">@dimen/_20dp</item>
        <item name="android:layout_marginRight">@dimen/_20dp</item>
    </style>

    <!--底部按钮通用-->
    <style name="dealer_bottom_btn_simple" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_44dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/common_button_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="common_btn_margin_leftandright" parent="dealer_bottom_btn_simple">
        <item name="android:layout_marginLeft">@dimen/_20dp</item>
        <item name="android:layout_marginRight">@dimen/_20dp</item>
    </style>

    <!--列表条目线性布局样式-->
    <style name="ItemLinStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_24dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--列表条目左侧样式-->
    <style name="ItemTextLeftStyle">
        <item name="android:layout_width">@dimen/_80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/_14dp</item>
        <item name="android:textColor">@color/black_default</item>
    </style>

    <!--列表条目右侧样式-->
    <style name="ItemTextRightStyle">
        <!--<item name="android:textIsSelectable">true</item>-->
        <item name="android:layout_marginLeft">@dimen/_10dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_14dp</item>
        <item name="android:textColor">@color/black_default</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--商品详情外层高度-->
    <style name="item_details_root" parent="MatchMatch.Horizontal">
        <item name="android:layout_height">@dimen/_50dp</item>
    </style>


</resources>
